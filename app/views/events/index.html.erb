    <%= label_tag(:event_title, "Name of the Event (as seen in the Box Office Seat-Table file-name):") %><br>
    <%= text_field_tag(:event_title) %>
  </div>
  
  <div>
    <%= label_tag(:file_type, "Box Office File-type:") %><br>
    <%= text_field_tag(:file_type) %>
  </div>
  
  <div>
    <%= submit_tag("Create") %>
